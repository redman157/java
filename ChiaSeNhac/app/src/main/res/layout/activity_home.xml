<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.HomeActivity"
    android:fitsSystemWindows="false"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar

            android:layout_alignParentTop="true"
            android:id="@+id/tb_HomeActivity"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:animateLayoutChanges="true"
            app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed"
            android:theme="@style/CustomToolBarStyle"
            app:popupTheme="@style/CustomPopupStyle"/>

        <com.google.android.material.tabs.TabLayout
            android:layout_alignBottom="@id/ll_vp_home"
            android:id="@+id/tab_HomeActivity"
            android:layout_width="match_parent"
            app:tabIndicatorColor="@color/orange"
            app:tabIndicatorGravity="bottom"
            app:tabIndicatorHeight="@dimen/_3sdp"
            app:tabPaddingStart="@dimen/_1sdp"
            app:tabPaddingEnd="@dimen/_1sdp"
            app:tabBackground="@drawable/custom_background_tab_layout"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_vp_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_Home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/ll_play_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />
                <include
                    layout="@layout/layout_play_media"
                    android:id="@+id/layout_play_media"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>