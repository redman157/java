<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity"
    android:gravity="bottom"
    app:umanoOverlay= "false"
    app:umanoFadeColor="@color/blackGrey"
    app:umanoPanelHeight="@dimen/_45sdp"
    app:umanoShadowHeight="4dp"
    app:umanoParallaxOffset="100dp">

    <!-- MAIN CONTENT -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/transparent"
                app:titleEnabled="false"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="snap|enterAlwaysCollapsed"
                app:title="@string/app_name">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_HomeActivity"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="?attr/actionBarSize"
                android:elevation="4dp"
                android:background="@color/whiteOpaqueX2"
                app:title="@string/app_name"
                android:animateLayoutChanges="true"
                app:layout_collapseMode="pin"
                android:theme="@style/CustomToolBarStyle"
                app:popupTheme="@style/CustomPopupStyle"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/fl_placeholder"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- SLIDING LAYOUT -->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dragView"
        android:clickable="true"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_main_media"
            android:id="@+id/layout_main_media"/>
    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>