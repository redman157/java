<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity"
    android:gravity="bottom"
    app:umanoOverlay= "false"
    app:umanoFadeColor="@color/blackGrey"
    app:umanoPanelHeight="@dimen/_45sdp"
    app:umanoShadowHeight="4dp"
    app:umanoParallaxOffset="100dp">

    <!-- MAIN CONTENT -->
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/include_toolbar"
                android:id="@+id/toolbar_container"/>
            <FrameLayout
                android:layout_below="@id/toolbar_container"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/fl_placeholder"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--    <fragment
                        android:tag="HomeFragment"
                        android:id="@+id/home_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="com.android.music_player.fragments.HomeFragment"/>
                    <fragment
                        android:tag="AllMusicFragment"
                        android:id="@+id/all_music_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="com.android.music_player.fragments.AllMusicFragment"/>-->
            </FrameLayout>


        </RelativeLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.MaterialComponents.Light"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/library"/>

    </androidx.drawerlayout.widget.DrawerLayout>
    <!-- SLIDING LAYOUT -->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dragView"
        android:clickable="true"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_main_media"
            android:id="@+id/layout_main_media"/>
    </LinearLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>