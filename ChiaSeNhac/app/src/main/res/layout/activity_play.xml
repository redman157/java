<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.droidheat.musicplayer.activities.PlayActivity">

    <LinearLayout
        android:id="@+id/ll_Back"
        android:weightSum="10"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <ImageButton
            android:id="@+id/imb_BackMusic"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="NestedWeights" />
        <View
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <ImageButton
            android:id="@+id/imb_InfoMusic"
            android:src="@drawable/ic_drive_eta_black_24dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/imb_SeeMenu"
            android:layout_weight="1"
            android:src="@drawable/ic_dots_vert_black_24dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_weight="8"
        android:id="@+id/vp_change_music"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="0dp">
    <RelativeLayout
        android:id="@+id/rl_lowerTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_leftTime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sb_leftTime"
            android:layout_marginStart="10dp"
            android:text="@string/nullTime"
            android:textColor="#ffffff"
            android:textSize="12sp" />


        <!--android:progress="50"-->
        <!--android:max="100"-->

        <SeekBar
            android:id="@+id/sb_leftTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-8dp"
            android:padding="0dp"
            android:progressDrawable="@drawable/progress_bar_accent"
            android:thumb="@drawable/player_seekbar_thumb"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/rightTime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/sb_leftTime"
            android:layout_marginEnd="10dp"
            android:focusable="false"
            android:text="@string/nullTime"
            android:textColor="#f1f1f1"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="true"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.droidheat.musicplayer.Icon
                android:id="@+id/icon_repeat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="13dp"
                android:src="@drawable/app_repeat"
                android:tint="@color/white" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.droidheat.musicplayer.Icon
                android:id="@+id/icon_prev"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/_0"
                android:gravity="center"
                android:padding="15dp"
                android:rotation="180"
                android:src="@drawable/app_next"
                android:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relpo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:id="@+id/play_bg"
                android:background="@color/accentColor" />

            <ImageView
                android:id="@+id/ic_play"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="14dp"
                android:src="@drawable/app_play"
                android:tint="@android:color/black" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.droidheat.musicplayer.Icon
                android:id="@+id/icon_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/_0"
                android:padding="15dp"
                android:src="@drawable/app_next"
                android:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:gravity="center">

            <com.droidheat.musicplayer.Icon
                android:id="@+id/icon_imageFav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="14dp"
                android:src="@drawable/app_heart"
                android:tint="#ffffff" />
        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>
</LinearLayout>
