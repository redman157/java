<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".activities.RecentlyAllMusicActivity">
    <LinearLayout
        android:id="@+id/ll_Back"
        android:weightSum="10"
        android:layout_weight="0.75"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            tools:ignore="NestedWeights">
            <ImageButton
                android:baselineAligned="true"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/imb_BackMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="15dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                />
        </LinearLayout>
        <View
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_width="0dp"
            tools:ignore="NestedWeights">
            <ImageButton
                android:id="@+id/imb_SearchMusic"
                android:src="@drawable/ic_search_white_24dp"
                android:adjustViewBounds="true"
                android:baselineAligned="true"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            tools:ignore="NestedWeights">
            <ImageButton
                android:id="@+id/imb_SeeMenu"

                android:src="@drawable/ic_dots_vert_black_24dp"
                android:baselineAligned="true"
                android:clickable="true"
                android:focusable="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:tint="@color/white"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:overScrollMode="always"
        android:layout_weight="8.25"
        android:nestedScrollingEnabled="true"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <com.droidheat.musicplayer.IconView
                    android:id="@+id/img_AlbumId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    tools:ignore="NestedWeights" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="7.5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/whiteOpaque"
                android:layout_height="0dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_recently_add"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="true"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_StatusPlayMusic"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#404040" />

        <include android:id="@+id/layout_play_media"
            layout="@layout/layout_play_media"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#404040" />
    </LinearLayout>

</LinearLayout>
