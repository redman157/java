<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_QuickPlay"
            android:text="Quick Play"
            android:textSize="20sp"
            android:textColor="@color/blackGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:id="@+id/ll_QuickPlay"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_QuickPlay"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"

                    card_view:cardCornerRadius="10dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="6dp" >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:src="@drawable/app_shuffle_inactive"
                        android:id="@+id/img_Shuffle_All"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_weight="3"
                    android:text="Shuffle All"
                    android:textSize="15dp"
                    android:textColor="@color/blackGrey"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_weight="7"

                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="6dp">
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/app_shuffle_inactive"
                        android:id="@+id/img_Most_Player"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_weight="3"
                    android:text="Most Player"
                    android:textSize="15dp"
                    android:textColor="@color/blackGrey"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"

                    android:layout_height="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="6dp" >
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/app_shuffle_inactive"
                        android:id="@+id/img_Recently_Add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:text="Recently Added"
                    android:textColor="@color/blackGrey"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Player_Songs"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ll_QuickPlay"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_margin="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="6dp">
                    <ImageView
                        android:id="@+id/img_Player_Songs"
                        android:layout_width="match_parent"
                        android:src="@drawable/tinh_dep"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content"/>

                    <TextView

                        android:id="@+id/text_Player_Songs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:drawableLeft="@drawable/ic_artists_black_24dp"
                        android:drawablePadding="6dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="12dp"
                        android:text="Viá»‡t"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="7dp"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="6dp">
                    <ImageView
                        android:id="@+id/img_Player_1"
                        android:layout_width="match_parent"
                        android:src="@drawable/tinh_dep"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:drawablePadding="6dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="12dp"
                        android:layout_gravity="bottom"
                        android:drawableLeft="@drawable/app_playlist"
                        android:textSize="15dp"
                        android:textColor="@color/black"

                        android:id="@+id/text_Player_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardPreventCornerOverlap = "false"
                    card_view:cardElevation="6dp">
                    <ImageView
                        android:id="@+id/img_Player_2"
                        android:layout_width="match_parent"
                        android:src="@drawable/tinh_dep"
                        android:scaleType="fitXY"
                        android:tint="@color/white"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:drawablePadding="6dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="12dp"
                        android:layout_gravity="bottom"
                        android:drawableLeft="@drawable/app_playlist"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:id="@+id/text_Player_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Recently_Add"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:weightSum="10"
            android:orientation="horizontal"

            android:layout_below="@id/ll_Player_Songs">
            <TextView
                android:layout_weight="7"
                android:id="@+id/text_Recently_Added"
                android:layout_width="0dp"
                android:textColor="@color/blackGrey"
                android:textSize="20dp"
                android:gravity="center"

                android:text="Recently Added To Library"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_ViewAll"
                android:layout_gravity="center"
                android:textColor="@color/cyan"
                android:textSize="15dp"
                android:text="View all"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_recently_add"
            android:layout_below="@id/ll_Recently_Add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>