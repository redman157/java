<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/ll_item_option_music"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:background="@drawable/selection_item"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_gravity="center"

                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_7sdp"
                    android:layout_margin="@dimen/_7sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/item_music_img_music"
                        android:layout_width="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@drawable/tinh_dep"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:weightSum="10"

                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/item_music_text_title"
                    android:gravity="left|center"
                    android:layout_weight="5"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:id="@+id/item_music_text_artists"
                    android:gravity="left|center"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"/>
            </LinearLayout>
            <TextView

                android:id="@+id/item_music_text_time"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_height="match_parent"/>
        </LinearLayout>
</LinearLayout>