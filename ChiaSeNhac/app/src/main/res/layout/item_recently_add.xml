<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="10"
    android:id="@+id/item_ll_Recently_Add"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="7dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="6dp">
        <ImageView
            android:id="@+id/item_img_recently_add"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"

            android:src="@drawable/ic_library_music_black_24dp"
            android:scaleType="fitCenter"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_weight="5.5"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="left|center"
            android:textColor="@color/blackGrey"
            android:id="@+id/item_text_title_recently_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:textSize="10sp"
            android:gravity="left|center"
            android:textColor="@color/blackGrey"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:id="@+id/item_text_artist_recently_add"
            android:layout_height="0dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_text_time_recently_add"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:layout_width="0dp"

        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/item_btn_menu_recently_add"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_menu_dot_black"
        android:layout_height="match_parent"/>
</LinearLayout>