<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/whiteOpaqueX4"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/ll_play_media"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
        <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:app="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="vertical"
            android:background="@color/whiteOpaqueX2"
            app:ignore="NamespaceTypo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="?android:attr/selectableItemBackground">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="5dp"
                    android:layout_height="36dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/img_albumArt_media"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_music_notes_padded"/>

                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="56dp">

                    <Button
                        android:id="@+id/btn_title_media"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_marginEnd="?android:attr/actionBarSize"
                        android:theme="@android:style/ThemeOverlay.Material.Dark" />

                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="8dp">

                        <ImageButton
                            android:id="@+id/imbt_Play_media"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackground"
                            android:layout_alignParentTop="true"
                            app:srcCompat="@drawable/avd_play_to_pause" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/relativeLayout1"
                        android:paddingEnd="16dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/text_title_media"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:textColor="@color/blackGrey"
                            android:textScaleX="1.05"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/text_artists_media"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/text_title_media"
                            android:fontFamily="sans-serif"
                            android:maxLines="1"
                            android:paddingTop="0dp"
                            android:textColor="@color/blackGrey"
                            android:textScaleX="1.05"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_change_state"
        android:layout_below="@id/ll_play_media"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_home"
            android:text="Home"
            android:background="?attr/selectableItemBackground"
            android:enabled="false"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:background="?attr/selectableItemBackground"
            android:id="@+id/btn_library"
            android:text="Library"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>