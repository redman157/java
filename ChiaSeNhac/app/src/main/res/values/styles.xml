<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- colorPrimaryDark thanh trạng thái trên của app, màu nền mặc định-->
    <!-- colorPrimary là background của 1 image nào đó-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:windowBackground">?attr/back_ground_app</item>
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:fillColor">@color/primaryDark</item>
        <item name="android:colorEdgeEffect">@color/black</item>
        <item name="buttonStyle">@style/MyCustomButton</item>
        <item name="editTextStyle">@style/MyCustomEditText</item>
        <item name="colorAccent">?attr/accent_color</item>
        <item name="colorPrimary">?attr/color_primary</item>
        <item name="colorPrimaryDark">?attr/color_primary_dark</item>
    </style>

    <style name="AppThemeInverted" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:fillColor">@color/primaryDark</item>
        <item name="android:colorEdgeEffect">@color/white</item>
        <item name="buttonStyle">@style/MyCustomButton</item>
        <item name="editTextStyle">@style/MyCustomEditText</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb_seekbar & track color (30% transparency) -->
        <item name="colorControlActivated">?select_enable</item>

        <!-- inactive thumb_seekbar color -->
        <item name="colorSwitchThumbNormal">?attr/text_color
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="SeekBarStyle" parent="android:Widget.Material.SeekBar">
        <item name="android:progressBackgroundTint">?attr/accent_color</item>
        <item name="android:progressTint">?attr/accent_color</item>
        <item name="android:colorControlActivated">?attr/accent_color</item>
        <item name="android:thumbTint">?attr/accent_color</item>
    </style>

    <style name="MyHomeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primaryColor</item>
        <item name="background">@color/primaryColor</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:logo">@null</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- MyCustomTextView -->
    <style name="MyCustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/accentColor</item>

    </style>

    <!-- MyCustomEditText -->
    <style name="MyCustomEditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textColor">?attr/text_color</item>
        <item name="android:textColorHighlight">?attr/indicator_edit</item>
        <item name="android:backgroundTint">@color/primaryDark</item>
        <item name="android:colorAccent">?attr/indicator_edit</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- MyCustomButton -->
    <style name="MyCustomButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/select_enable</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:background">?attr/back_ground_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- MyCustomBottomSheetDialog -->
    <style name="MyCustomBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_background_corner_bottom_sheet</item>
    </style>

    <!-- MyCustomDialog -->
    <style name="MyCustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@drawable/custom_corner_dialog</item>
        <item name="buttonStyle">@style/MyCustomButton</item>
    </style>

    <!-- HomeActivity -->
    <style name="AppThemeToolbar" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyHomeActionBar</item>
        <item name="actionBarStyle">@style/MyHomeActionBar</item>
        <item name="dialogTheme">@style/MyCustomDialog</item>
        <item name="android:dialogTheme">@style/MyCustomDialog</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BackgroundPlay" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fillColor">@color/primaryDark</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!--Toolbar pop up-->
    <style name="CustomToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="CustomToolBarPlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="CustomPopupStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

</resources>
