<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- colorPrimaryDark thanh trạng thái trên của app, màu nền mặc định-->
    <!-- colorPrimary là background của 1 image nào đó-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:fillColor">@color/primaryDark</item>

 <!--       <item name="colorControlNormal">@color/whiteOpaqueX4</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:windowBackground">@color/whiteOpaqueX6</item>
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:windowContentOverlay">@color/light_grey</item>
        <item name="android:buttonStyle">?android:borderlessButtonStyle</item>-->
    </style>


    <style name="BackgroundPlay" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fillColor">@color/primaryDark</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    
    <style name="CustomToolBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="CustomToolBarPlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="CustomPopupStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <style name="CustomPopupPlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
    </style>

    <!-- HomeActivity -->
    <style name="AppThemeToolbar" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyHomeActionBar</item>
        <item name="actionBarStyle">@style/MyHomeActionBar</item>
        <item name="dialogTheme">@style/Theme.AppCompat.Dialog</item>
        <item name="android:dialogTheme">@style/Theme.AppCompat.Dialog</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- PlayActivity -->
    <style name="AppThemeToolbar.Overlay" parent="AppThemeToolbar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>


    <!-- TimerActivity & IntentPlayActivity -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/primaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- SettingsActivity -->
    <style name="ThemeActionBar" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyHomeActionBar</item>
        <item name="actionBarStyle">@style/MyHomeActionBar</item>
    </style>

    <!-- GlobalActivity -->
    <style name="ThemeToolBarTranslucent" parent="AppThemeToolbar">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CarTheme" parent="CustomToolBarPlay">
        <!-- colorPrimaryDark is currently used in Android Auto for:
             - App background
             - Drawer right side ("more" custom actions) background
             - Notification icon badge tinting
             - Overview “now playing” icon tinting
         -->
        <item name="colorPrimaryDark">#ffbf360c</item>

        <!-- colorAccent is used in Android Auto for:
             - Spinner
             - progress bar
             - floating action button background (Play/Pause in media apps)
         -->
        <item name="colorAccent">@color/cyan</item>
    </style>
    <!--
        *
        -->
    <style name="MyHomeActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primaryColor</item>
        <item name="background">@color/primaryColor</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppCompat.Widget.ActionMode.Title</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:logo">@null</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
