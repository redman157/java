<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".activity.QnAActivity">
    <RelativeLayout
        android:layout_weight="0.75"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/company_name"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_14sdp" />

        <ImageView

            android:id="@+id/img_backQNA"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/backfoward" />

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_below="@id/img_backQNA"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9999"/>
    <TextView
        android:layout_weight="1"
        android:text="@string/qna"
        android:gravity="center"
        android:textColor="#f76091"
        android:textSize="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcViewQNA"
        android:layout_weight="8.25"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>