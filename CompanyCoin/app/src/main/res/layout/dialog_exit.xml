<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingRight="@dimen/_10sdp"
    android:paddingLeft="@dimen/_18sdp"
    android:paddingTop="@dimen/_10sdp"
    android:background="#fff"
    android:paddingBottom="@dimen/_10sdp"

    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textTitleDiaglogExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_10sdp"
        android:text="@string/do_you_want_logout"/>
    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_below="@id/textTitleDiaglogExit"
        android:id="@+id/btnYesDiaglogExit"
        android:text="@string/yes"
        android:layout_marginLeft="@dimen/_15sdp"
        android:minWidth="@dimen/_50sdp"
        android:minHeight="@dimen/_20sdp"
        android:gravity="center"

        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:textSize="@dimen/_9sdp"
        android:textColor="#ff00"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:id="@+id/btnNoDiaglogExit"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitleDiaglogExit"
        android:layout_marginStart="2dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toRightOf="@id/btnYesDiaglogExit"
        android:minWidth="@dimen/_50sdp"
        android:minHeight="@dimen/_20sdp"
        android:gravity="center"
        android:text="@string/no"
        android:textAllCaps="false"
        android:textColor="#ff00"
        android:textSize="@dimen/_9sdp" />
</RelativeLayout>