<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    android:background="#fff">
    <ImageView
        android:id="@+id/imgCloseInfoUserLike"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:src="@drawable/close_black"/>
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_marginLeft="@dimen/_10sdp"

        android:layout_height="@dimen/_50sdp">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="@dimen/_20sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imgAvataInfoPostIdea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:paddingRight="@dimen/_8sdp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="@dimen/_4sdp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="#79DBE7"
                android:textStyle="bold"

                android:id="@+id/textInfoNamePostIdea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
              />
            <TextView
                android:paddingLeft="@dimen/_4sdp"
                android:layout_weight="1"
                android:id="@+id/textInfoTimePostIdea"
                android:layout_width="wrap_content"

                android:textSize="@dimen/_10sdp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:id="@+id/textInfoIdeaPostIdea"
        android:layout_width="wrap_content"
        android:textSize="@dimen/_11sdp"

        android:autoLink="web"
        android:linksClickable="true"
        android:textColorLink="#2196f3"
        android:textColor="#4bdba7"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"/>
    <LinearLayout
        android:paddingBottom="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"

            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:id="@+id/imgInfoLikeUserPostIdea"/>
        <TextView
            android:layout_weight="6"

            android:id="@+id/textNumLikeUserPostIdea"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:textSize="@dimen/_9sdp"
            android:layout_height="match_parent"
            />
        <TextView
            android:layout_weight="3"
            android:id="@+id/textPlusNumCoinPostIdea"
            android:layout_width="0dp"
            android:textSize="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:gravity="right"
            android:layout_height="match_parent"
            android:textColor="#ffa613" />
    </LinearLayout>
    <View

        android:id="@+id/viewTopRecivewPostInfoIdea"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:textSize="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcViewUserNameLikePostIdea"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>