<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="#f9a825"
                    android:id="@+id/textQuestionQNA"
                    android:text="Khi đổi quà ở website xong, thì làm thế nào để biết được đã hoàn tất giao dịch, giao dịch lỗi, hay giao dịch thành công để mà đổi quà?"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginRight="@dimen/_9sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:src="@drawable/add"
                    android:id="@+id/imgIconQNA"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_14sdp"/>
                </LinearLayout>
            <View
                android:id="@+id/viewQNA"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"/>

            <TextView
                android:visibility="gone"
                android:paddingTop="@dimen/_4sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:paddingRight="@dimen/_10sdp"
                android:id="@+id/textReplyQNA"
                android:textSize="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sau khi hoàn tất giao dịch đổi quà sẽ có popup thông báo trạng thái giao dịch đồng thời có thể xem lại tại lịch sử giao dịch của trang thông tin cá nhân người dùng." />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>