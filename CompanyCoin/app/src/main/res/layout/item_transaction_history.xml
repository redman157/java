<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:paddingLeft="@dimen/_4sdp"
    android:paddingRight="@dimen/_4sdp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#DDDDDD"/>
    <LinearLayout
        android:paddingTop="@dimen/_4sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingRight="@dimen/_7sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgIconHistory"
            android:layout_weight="1"
            android:src="@drawable/ic_transfer"
            android:layout_width="0dp"

            android:layout_height="@dimen/_20sdp"/>
        <LinearLayout
            android:weightSum="10"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/imgAvataSendHistory"
                        android:src="@drawable/phamson"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"/>
                    <TextView
                        android:paddingTop="@dimen/_3sdp"
                        android:id="@+id/textNameSendHistory"
                        android:gravity="center"

                        android:text="Ngọc Sơn"
                        android:textSize="@dimen/_9sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView

                        android:id="@+id/imgAvataReceiverHistory"
                        android:layout_gravity="center"
                        android:src="@drawable/phamson"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"/>
                    <TextView
                        android:paddingTop="@dimen/_3sdp"
                        android:id="@+id/textNameReceiverHistory"
                        android:text="Ngọc Sơn hehe"
                        android:textSize="@dimen/_9sdp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/textHistoryMessageSend"

                android:layout_marginTop="@dimen/_10sdp"
                android:text="rửa con den"
                android:paddingLeft="@dimen/_7sdp"
                android:paddingRight="@dimen/_7sdp"
                android:textSize="@dimen/_8sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:background="@drawable/custom_textview_comment_history"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textDateHistory"
            android:layout_weight="3"
            android:textSize="@dimen/_9sdp"
            android:text="2019-09-18 07:51:34"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textCoinHistory"
                android:text="1"
                android:textSize="@dimen/_9sdp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/coin"
                android:gravity="center"
                android:textSize="@dimen/_9sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>