<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".activity.ChangePassSuccessActivity">
    <LinearLayout
        android:layout_weight="0.75"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:paddingRight="@dimen/_20sdp"
            android:id="@+id/img_backChangePasswordSucces"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@null"
            android:src="@drawable/backfoward" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="@dimen/_40sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:text="@string/change_password"
            android:textSize="@dimen/_14sdp"
            android:textColor="#000" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9.25">
        <TextView
            android:textColor="#4bdba7"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"
            android:text="@string/change_password"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textCheckAgainPassReset"
            android:textColor="#073307"
            android:textSize="@dimen/_12sdp"
            android:layout_gravity="center"
            android:text="@string/changepasssuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnChangePasswordSucces"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="@string/backmypage"
            android:minWidth="@dimen/_200sdp"
            android:textSize="@dimen/_11sdp"
            android:textColor="#fff"
            android:minHeight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:background="@drawable/custom_button"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>