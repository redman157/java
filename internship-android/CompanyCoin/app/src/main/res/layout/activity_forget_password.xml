<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/foggetPassActivity"
    android:orientation="vertical"
    tools:context=".activity.ForgetPasswordActivity">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120sdp"/>
    <EditText
        android:paddingLeft="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/editForgetPass"
        android:inputType="textPassword"
        android:hint="@string/please_enter_your_register_email"
        android:backgroundTint="#E38E04"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        />
     <Button
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btnAcceptForgetPass"
        android:background="@drawable/custom_button"
        android:layout_width="wrap_content"
        android:text="@string/forget"
        android:minHeight="@dimen/_20sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:minWidth="@dimen/_200sdp"
        android:textSize="@dimen/_12sdp"
        android:textColor="#ffff"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textBackLoginForget"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_7sdp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="@dimen/_10sdp"
        android:text="@string/back_to_login"/>
</LinearLayout>